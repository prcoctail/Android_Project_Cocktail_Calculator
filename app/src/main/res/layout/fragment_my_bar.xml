<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_theme_sys_dark_surface"
    android:paddingHorizontal="16dp"
    tools:context=".ui.features.my_bar.MyBarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/my_bar_auth_hint"
            android:textColor="@color/material_theme_sys_dark_on_surface"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/my_bar_auth_navigate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/material_theme_sys_dark_primary"
            android:text="@string/my_bar_auth_navigate_button"
            android:textAllCaps="false"
            android:textColor="@color/material_theme_sys_dark_on_primary"
            android:textSize="14sp"
            app:cornerRadius="50dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>