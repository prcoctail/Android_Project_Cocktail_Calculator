<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/material_theme_sys_dark_surface_container_low"
    app:cardCornerRadius="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="8dp"
            android:paddingTop="8dp"
            android:text="@string/cocktails_card_cooking_steps_title"
            android:textColor="@color/material_theme_sys_dark_on_surface"
            android:textSize="24sp" />

        <include layout="@layout/cocktail_card_serving_steps_list" />
    </LinearLayout>
</androidx.cardview.widget.CardView>