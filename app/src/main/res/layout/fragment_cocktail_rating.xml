<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    tools:context=".ui.features.cocktails.ui.CocktailRatingFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/material_theme_sys_dark_surface_container"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Ваша оценка"
                    android:textColor="@color/material_theme_sys_dark_on_surface"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/textView9"
                    android:text="Общий"
                    android:textColor="@color/material_theme_sys_dark_on_surface"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="4,1/1234"
                    android:textColor="@color/material_theme_sys_dark_on_surface"
                    android:textSize="14sp"
                    app:drawableStartCompat="@drawable/baseline_star_24"
                    app:drawableTint="@color/material_theme_sys_dark_on_surface" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/rating_star_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_r50_material_theme_sys_dark_primary"
                    android:contentDescription="TODO"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_star_24" />

                <ImageButton
                    android:id="@+id/rating_star_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_r50_material_theme_sys_dark_primary"
                    android:contentDescription="TODO"
                    android:gravity="center"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/rating_star_3"
                    app:layout_constraintStart_toEndOf="@id/rating_star_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_star_24" />

                <ImageButton
                    android:id="@+id/rating_star_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_r50_material_theme_sys_dark_primary"
                    android:contentDescription="TODO"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/rating_star_4"
                    app:layout_constraintStart_toEndOf="@id/rating_star_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_star_24" />

                <ImageButton
                    android:id="@+id/rating_star_4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_r50_material_theme_sys_dark_surface_container_highest"
                    android:contentDescription="TODO"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/rating_star_5"
                    app:layout_constraintStart_toEndOf="@id/rating_star_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_star_24"
                    app:tint="@color/material_theme_sys_dark_primary" />

                <ImageButton
                    android:id="@+id/rating_star_5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_r50_material_theme_sys_dark_surface_container_highest"
                    android:contentDescription="TODO"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_star_24"
                    app:tint="@color/material_theme_sys_dark_primary" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>