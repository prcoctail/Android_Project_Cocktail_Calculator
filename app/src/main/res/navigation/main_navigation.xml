<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.partyshaker.partyshaker.ui.features.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment" />
        <action
            android:id="@+id/action_mainFragment_to_cocktailsFragment"
            app:destination="@id/cocktailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_cocktailCardFragment"
            app:destination="@id/cocktailCardFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.partyshaker.partyshaker.ui.features.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="ru.partyshaker.partyshaker.ui.features.auth.AuthorizationFragment"
        android:label="fragment_authorization"
        tools:layout="@layout/fragment_authorization" />

    <fragment
        android:id="@+id/cocktailsFragment"
        android:name="ru.partyshaker.partyshaker.ui.features.cocktails.ui.CocktailsFragment"
        android:label="fragment_cocktails"
        tools:layout="@layout/fragment_cocktails" >

        <action
            android:id="@+id/action_cocktailsFragment_to_cocktailsFilterFragment"
            app:destination="@id/cocktailsFilterFragment" />
    </fragment>

    <fragment
        android:id="@+id/cocktailsFilterFragment"
        android:name="ru.partyshaker.partyshaker.ui.features.cocktails.ui.filter.CocktailsFilterFragment"
        android:label="fragment_cocktails_filter"
        tools:layout="@layout/fragment_cocktails_filter" />

    <fragment
        android:id="@+id/cocktailCardFragment"
        android:name="ru.partyshaker.partyshaker.ui.features.cocktails.ui.CocktailCardFragment"
        android:label="fragment_cocktail_card"
        tools:layout="@layout/fragment_cocktail_card" />


</navigation>