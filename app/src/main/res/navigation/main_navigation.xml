<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.partyshaker.partyshaker.features.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment" />
        <action
            android:id="@+id/action_mainFragment_to_cocktailsFragment"
            app:destination="@id/cocktailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.partyshaker.partyshaker.features.login.presentation.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="ru.partyshaker.partyshaker.features.login.presentation.AuthorizationFragment"
        android:label="fragment_authorization"
        tools:layout="@layout/fragment_authorization" />

    <fragment
        android:id="@+id/cocktailsFragment"
        android:name="ru.partyshaker.partyshaker.features.cocktails.ui.CocktailsFragment"
        android:label="fragment_cocktails"
        tools:layout="@layout/fragment_cocktails" />


</navigation>