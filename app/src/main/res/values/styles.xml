<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonButtonStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FilledPrimeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/filled_prime_button_bg</item>
        <item name="android:textColor">@color/material_theme_sys_dark_on_primary</item>
    </style>

    <style name="OutlinePrimeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/outline_prime_button_bg</item>
        <item name="android:textColor">@color/material_theme_sys_dark_primary</item>
    </style>

    <style name="TextPrimeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/material_theme_sys_dark_primary</item>
    </style>

    <style name="TonalPrimeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/tonal_prime_button_bg</item>
        <item name="android:textColor">@color/material_theme_sys_dark_primary</item>
    </style>

    <style name="DisabledPrimeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/disabled_prime_button_bg</item>
        <item name="android:textColor">@color/disabled_button_text_color</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="FilledWrongButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/filled_wrong_button_bg</item>
        <item name="android:textColor">@color/material_theme_sys_dark_on_error</item>
    </style>

    <style name="TextWrongButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/material_theme_sys_dark_error</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CocktailsFilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/cocktails_filter_chip_text</item>
        <item name="android:textSize">14sp</item>
        <item name="chipStrokeColor">@color/cocktails_filter_chip_stroke</item>
        <item name="chipBackgroundColor">@color/cocktails_filter_chip_background</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
</resources>