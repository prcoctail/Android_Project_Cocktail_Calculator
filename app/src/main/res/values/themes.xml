<resources>
    <!-- Base application theme. -->
    <style name="Theme.PartyShaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/CommonButtonStyle</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextInputLayoutAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="MyOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/material_theme_sys_dark_primary</item>
        <item name="hintTextColor">@color/material_theme_sys_dark_primary</item>
        <item name="startIconTint">@color/material_theme_sys_dark_on_surface_variant</item>
        <item name="endIconTint">@color/material_theme_sys_dark_on_surface_variant</item>
        <item name="android:textColorHint">@color/material_theme_sys_dark_on_surface_variant</item>
        <item name="helperTextTextColor">@color/material_theme_sys_dark_on_surface_variant</item>
        <item name="android:strokeColor">@color/material_theme_sys_dark_outline</item>
        <item name="errorIconTint">@color/material_theme_sys_dark_error</item>
        <item name="errorTextColor">@color/material_theme_sys_dark_error</item>
        <item name="boxStrokeErrorColor">@color/material_theme_sys_dark_error</item>
    </style>

    <style name="CocktailsIsFavoritedCheckBox">
        <item name="buttonTint">@color/cocktail_is_favorited</item>
    </style>
</resources>